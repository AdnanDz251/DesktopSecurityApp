<UserControl x:Class="DesktopSecurityApp.UserInterface.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopSecurityApp.UserInterface.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <StackPanel>

        <StackPanel Orientation="Horizontal"
                    Margin="0,20,0,0">
            <Border Width="400"
                    Height="200">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" 
                                         EndPoint="1,2">

                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                        <GradientStop Color="#e0f711" Offset="0.7"/>

                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="20"
                                       RadiusY="20"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Welcom To&#x0a;PrivacyPulse"
                                   Foreground="White"
                                   FontSize="60"
                                   Margin="20,20,10,10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Width="200" 
                    Height="200"
                    Margin="50,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" 
                         EndPoint="1,2">

                        <GradientStop Color="#e0f711" Offset="0.1"/>
                        <GradientStop Color="#ff1ff4" Offset="0.8"/>

                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="20"
                                       RadiusY="20"
                                       Rect="0,0,200,200"/>
                </Border.Clip>

                <Grid>
                    <Image Width="270"
                           Height="270"
                           Source="/Assets/Images/Logo.png" Margin="-35,-35,-35,-35"/>
                </Grid>

            </Border>
        </StackPanel>

        <StackPanel>

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            
            <TextBlock Text="Instructions"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       Margin="20,10,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        Background="#844eff"
                        CornerRadius="20"
                        Margin="0">
                </Border>

                <Border Width="150"
                        Height="150"
                        Background="#4e99ff"
                        CornerRadius="20"/>
                
                <Border Width="150"
                        Height="150"
                        Background="#4eff91"
                        CornerRadius="20"/>

                <Border Width="150"
                        Height="150"
                        Background="#ecff4e"
                        CornerRadius="20"/>
            </StackPanel>

        </StackPanel>

    </StackPanel>
</UserControl>
